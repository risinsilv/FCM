<!-- button_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the solid color for the button -->
    <solid android:color="#50C878"/>

    <!-- Set the corner radius for rounded edges -->
    <corners android:radius="16dp"/>

    <!-- Optional: Add padding for better appearance -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />

    <!-- Optional: Add a stroke if you want a border around the button -->
    <stroke
        android:width="2dp"
        android:color="#00B76F"/> <!-- A darker shade for border if needed -->
</shape>