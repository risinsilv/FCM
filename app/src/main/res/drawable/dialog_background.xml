<!-- dialog_background.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set the background color to a mix of green and white -->
    <solid
       android:color="#00FF7F"
        android:angle="270"/>

    <!-- Set the corner radius for rounded edges -->
    <corners android:radius="36dp"/>

    <!-- Optional: Add padding for better look -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="16dp"
        android:bottom="16dp" />

</shape>
